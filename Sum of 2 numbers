// Classes and Objects- Sum

#include <iostream>
using namespace std;

class Sum 
{
    private:
    int num1, num2, sum;

    public:
    void accept()
    {
        cout << "\n\t Enter first number: ";
        cin >> num1;

        cout << "\n\t Enter second number: ";
        cin >> num2;
    }
    void cal()
    {
        sum = num1 + num2;
    }
    void display()
    {
        cout << "\n\t Sum of 2 nos: " << sum; 
    }

};

int main()
{
    Sum obj;
    obj.accept();
    obj.cal();
    obj.display();


    return 0;
}
