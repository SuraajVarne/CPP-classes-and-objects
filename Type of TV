// Type of TV

#include <iostream>
using namespace std;

class Tv
{
    private:
    char tv;

    public:
    void accept()
    {
        cout << "\n\t Enter the initial of the color of the TV: ";
        cin >> tv;
    }
    void display()
    {
        if(tv == 'C' || tv == 'c')
        {
            cout << "\n\t Color TV";
        }
        else if(tv == 'B' || tv == 'b')
        {
            cout << "\n\t Black and white TV";
        }
        else 
        {
            cout << "Others";
        }
    }
};

int main()
{
    Tv obj;
    obj.accept();
    obj.display();

    return 0;
}
