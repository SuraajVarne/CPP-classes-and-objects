// Gender- Classes and Objects

#include <iostream>
using namespace std;

class Gender
{
    private:
    char gender;

    public:
    void accept()
    {
        cout << "\n\t Enter your gender initial: ";
        cin >> gender;
    }
    void display()
    {
        if(gender == 'm' || gender == 'M')
        {
            cout << "\n\t You are a male";
        }
        else if(gender == 'f' || gender == 'F')
        {
            cout << "\n\t You are a female";
        }
        else 
        {
            cout << "Others";
        }
    }
};

int main()
{
    Gender obj;
    obj.accept();
    obj.display();

    return 0;
}
